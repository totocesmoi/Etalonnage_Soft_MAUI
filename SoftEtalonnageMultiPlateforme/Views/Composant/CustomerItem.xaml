<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoftEtalonnageMultiPlateforme.Views.Composant.CustomerItem"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             xmlns:views="clr-namespace:SoftEtalonnageMultiPlateforme.Views"
             xmlns:option="clr-namespace:Shared;assembly=Shared"
             xmlns:converters="clr-namespace:SoftEtalonnageMultiPlateforme.Converters"
             Background="{DynamicResource Background}">

    <ContentView.Resources>
        <ResourceDictionary>
            <converters:MultiParameterConverter x:Key="MultiParameterConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <VerticalStackLayout Padding="10">
        <Frame BackgroundColor="LightCyan">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer>
                    <TapGestureRecognizer.Command>
                        <Binding Path="BindingContext.GetACustomer" Source="{RelativeSource AncestorType={Type views:CustomerCatalogue}}" />
                    </TapGestureRecognizer.Command>
                    <TapGestureRecognizer.CommandParameter>
                        <MultiBinding Converter="{StaticResource MultiParameterConverter}">
                            <Binding Path="Name" />
                            <Binding>
                                <Binding.Source>
                                    <x:Boolean>True</x:Boolean>
                                </Binding.Source>
                            </Binding>
                            <Binding>
                                <Binding.Source>
                                    <x:String>CustomerUpdate</x:String>
                                </Binding.Source>
                            </Binding>
                        </MultiBinding>
                    </TapGestureRecognizer.CommandParameter>
                </TapGestureRecognizer>
            </Frame.GestureRecognizers>

            <StackLayout>
                <VerticalStackLayout>
                    <Label Text="{Binding Name}" TextColor="Black"/>
                    <Label Text="{Binding Address}"/>
                    <Label Text="{Binding Email}"/>
                    <Label Text="{Binding PhNum}"/>
                </VerticalStackLayout>
            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentView>
