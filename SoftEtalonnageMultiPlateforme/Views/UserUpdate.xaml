<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoftEtalonnageMultiPlateforme.Views.UserUpdate"
             xmlns:local="clr-namespace:SoftEtalonnageMultiPlateforme.Views"
             Background="{DynamicResource Background}"
             BindingContext="{Binding Source={RelativeSource AncestorType={x:Type local:UserCatalogue}}, Path=.}"
             Shell.TabBarIsVisible="True">
    
    <VerticalStackLayout Padding="10">
        <Label Text="Add or Update User"
               FontSize="24"
               TextColor="White"
               HorizontalOptions="Center" />
            
        <VerticalStackLayout>
            <Label Text="Name:" TextColor="DeepSkyBlue" />
            <Entry Text="{Binding UserServiceVM.SelectedUser.Name, Mode=TwoWay}" Placeholder="{DynamicResource EnterName}" />

            <Label Text="Surname:" TextColor="DeepSkyBlue" />
            <Entry Text="{Binding UserServiceVM.SelectedUser.Surname, Mode=TwoWay}" Placeholder="{DynamicResource EnterSurname}" />

            <Label Text="Login:" TextColor="DeepSkyBlue" />
            <Entry Text="{Binding UserServiceVM.SelectedUser.Login, Mode=TwoWay}" Placeholder="{DynamicResource EnterLogin}" />

            <Label Text="Password:" TextColor="DeepSkyBlue" />
            <Entry Text="{Binding UserServiceVM.SelectedUser.Password, Mode=TwoWay}" Placeholder="{DynamicResource EnterPasswd }" />

            <Label Text="Role:" TextColor="DeepSkyBlue" />
            <Picker SelectedItem="{Binding UserServiceVM.SelectedUser.UserRole, Mode=TwoWay}">
                <Picker.Items>
                    <x:String>Administrator</x:String>
                    <x:String>MeasurementExpert</x:String>
                    <x:String>Operator</x:String>
                </Picker.Items>
            </Picker>
        </VerticalStackLayout>
    </VerticalStackLayout>
    
</ContentPage>