<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoftEtalonnageMultiPlateforme.Views.Picker.PickerFontSize">
    <VerticalStackLayout Padding="10">

        <Picker
            x:Name="pickerFontSize" 
            HorizontalTextAlignment="Center"
            Title="Taille de Police"
            TitleColor="{DynamicResource Text1}"
            SelectedIndexChanged="pickerFontSize_SelectedIndexChanged"
            TextColor="{DynamicResource Text2}"
            BackgroundColor="Transparent">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Petit</x:String>
                    <x:String>Moyen</x:String>
                    <x:String>Grand</x:String>
                    <x:String>Papi</x:String>
                    <x:String>Mikael</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

    </VerticalStackLayout>
</ContentView>
