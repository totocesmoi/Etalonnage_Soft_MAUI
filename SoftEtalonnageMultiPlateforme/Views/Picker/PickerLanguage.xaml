<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoftEtalonnageMultiPlateforme.Views.Picker.PickerLanguage">
    <VerticalStackLayout>

        <Picker
            HorizontalTextAlignment="Center"
            Title="{DynamicResource LanguagePickerTitle}"
            TitleColor="{DynamicResource Text1}"
            ItemsSource="{Binding LanguageVM.AvailableLanguages}"
            SelectedItem="{Binding LanguageVM.SelectedLanguage, Mode=TwoWay}"
            TextColor="{DynamicResource Text2}"
            BackgroundColor="Transparent">
        </Picker>

    </VerticalStackLayout>
</ContentView>
