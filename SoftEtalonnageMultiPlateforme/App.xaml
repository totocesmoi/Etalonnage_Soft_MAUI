<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SoftEtalonnageMultiPlateforme"
             xmlns:langue="clr-namespace:SoftEtalonnageMultiPlateforme.Resources.Langue"
             x:Class="SoftEtalonnageMultiPlateforme.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                -->
                
                <langue:LocalizationDictionnary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}" />
        </Style>
        <x:Double x:Key="GlobalFontSize"> 16 </x:Double>
        <x:Double x:Key="TitleFontSize"> 25 </x:Double>

    </Application.Resources>
</Application>
